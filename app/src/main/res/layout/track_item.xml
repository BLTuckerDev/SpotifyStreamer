<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="20dp">


    <ImageView
        android:id="@+id/track_item_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/artist_thumb_sample"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/track_item_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Title goes here"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/track_item_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album Title goes here"
            android:textSize="16sp"/>



    </LinearLayout>





</LinearLayout>